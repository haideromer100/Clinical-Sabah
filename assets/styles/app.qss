/* Application Style */
QMainWindow, QWidget {
    background: #FFFFFF;
    font-family: Arial, sans-serif;
}

QPushButton {
    background-color: #1976D2;
    color: white;
    border-radius: 6px;
    padding: 4px 8px;
}

QPushButton:hover {
    background-color: #1E88E5;
}

QLineEdit, QPlainTextEdit, QDateEdit {
    border: 1px solid #CCCCCC;
    padding: 4px;
    border-radius: 4px;
}

