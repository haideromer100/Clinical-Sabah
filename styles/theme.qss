/* Sidebar */
#Sidebar { background:#195D7D; }
SidebarButton {
  background:transparent; color:#CDE4F6;
  padding:10px 24px; border-radius:6px; text-align:left;
}
SidebarButton:hover,
SidebarButton[selected="true"] { background:#4DA6C8; color:#FFF; }

/* Cards */
.InfoCard { background:#FFF; border-radius:8px; padding:24px 32px; }

/* Banner */
#Banner QLabel { color:#134A66; font:48px "Segoe UI Semibold"; }
